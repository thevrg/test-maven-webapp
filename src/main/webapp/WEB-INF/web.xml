<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>piros</servlet-name>
        <servlet-class>hu.dpc.edu.web.RegisterUserController</servlet-class>
        <init-param>
            <param-name>szin</param-name>
            <param-value>red</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>kek</servlet-name>
        <servlet-class>hu.dpc.edu.web.RegisterUserController</servlet-class>
        <init-param>
            <param-name>szin</param-name>
            <param-value>kek</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>piros</servlet-name>
        <url-pattern>/piroska</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>kek</servlet-name>
        <url-pattern>/kekke</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>ize</param-name>
        <param-value>titok</param-value>
    </context-param>
</web-app>